<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.nepenthe.dao.StudentMapper">
    <!--插入学生-->
    <insert id="addStudent" parameterType="com.nepenthe.pojo.Students">
        insert into teamTogether.student (studentId, name, idCard, className)
        values (#{studentId}, #{name}, #{idCard}, #{className});
    </insert>
    <!--删除学生-->
    <delete id="deleteStudent" parameterType="int">
        delete
        from teamTogether.student
        where id = #{id};
    </delete>
    <!--修改学生-->
    <update id="updateStudent" parameterType="com.nepenthe.pojo.Students">
        update teamTogether.student
        set studentId= #{studentId},
            name=#{name},
            idCard=#{idCard},
            className=#{bj}
        where id = #{id};
    </update>
    <!--根据Id查询学生-->
    <select id="queryStudentById" resultType="com.nepenthe.pojo.Students">
        select *
        from campus.student
        where id = #{id}
    </select>
    <!--查询所有学生-->
    <select id="queryAllStudent" resultType="com.nepenthe.pojo.Students">
        select *
        from campus.student
    </select>
    <!--根据名字查询学生-->
    <select id="queryStudentByName" resultType="com.nepenthe.pojo.Students">
        select *
        from campus.student
        where name = #{name}
    </select>
</mapper>
